                            <font>
                                <Font size="15.0" />
                            </font>
                  </Label>
                        <TextField fx:id="UserNameField" promptText="Enter User Name">
                            <font>
                                <Font size="15.0" />
                            </font>
                  </TextField>
                        <Label prefHeight="30.0" prefWidth="70.0" text="Password">
                            <font>
                                <Font size="15.0" />
                            </font>
                  </Label>
                        <PasswordField fx:id="passwordField" promptText="Enter User Password">
                            <font>
                                <Font size="15.0" />
                            </font>
                  </PasswordField>
                    </children>
                </VBox>
                <VBox spacing="20.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
